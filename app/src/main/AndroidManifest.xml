<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ljennings.memorygame" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" > <!-- fullscreen mode -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" > <!-- portrait -->
        </activity>


        <activity
            android:name=".CanvasActivity"
            android:label="@string/title_activity_canvas"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SliderActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

    </application>
</manifest>
